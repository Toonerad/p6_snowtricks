{% extends 'base.html.twig' %}

{% block navbar %}navbar-light{% endblock %}

{% block title %}Page de profil {{ parent() }}{% endblock %}


{% block body %}
{% if user is null %}
    Utilisateur non trouvé
{% else %}
    <section class="slice slice-xl">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card bg-dark">
                        <div class="card-body py-5">
                            <div class="d-flex align-items-start">
                                <div class="icon icon-lg">
                                    <img src="{{ asset('img/Blank_Avatar.png') }}" class="avatar avatar-lg mr-3">
                                </div>
                                <div class="icon-text">
                                    <h4 class="heading text-white">{{ user.username }}</h4>
                                    <p class="text-white"><i>Membre actif</i></p>
                                </div>
                            </div>
                            <br>
                            {% if app.user == user %}
                                <button type="button" class="btn btn-block btn-secondary">Editer votre profil</button>

                            {% endif %}
                        </div>
                    </div>
                    <br>
                    {% if app.user == user %}
                    <div class="card card-pricing popular text-center px-3 mb-4 z-depth-3">
                        <div class="card-header py-4">
                            <h4 class="mb-4">Pass Premium</h4>
                            <h1 class="display-4 text-primary text-center">15€</h1>
                            <span class="h6 text-muted">par mois</span>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-4">
                                <li>* Badge premium sur votre profil</li>
                                <li>* Plus d'options d'ajouts de figures</li>
                                <li>* Et bien plus encore ..</li>
                            </ul>
                            <button type="button" class="btn btn-primary mb-3">Voir l'offre</button>
                        </div>
                    </div>
                    {% endif %}
                </div>

                <div class="col-lg-8 justify-content-end">
                    <div class="card bg-cover">
                        <div class="card-body py-5">
                            <div class="d-flex align-items-start">
                                <div class="icon-text">
                                    <h2 class="heading">Informations du membre</h2>
                                    <hr />
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="card bg-cover">
                        <div class="card-body py-5">
                            <div class="d-flex align-items-start">
                                <div class="icon-text">
                                    <h2 class="heading">Activités de l'utilisiteur</h2>
                                    <p>Dernières actions de l'utilisateur</p>
                                    <hr />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </section>

{% endif %}
{% endblock %}
